        "/api/reservations/{id}": {
            "get": {
                "tags": [
                    "Reservas"
                ],
                "summary": "Obtener una reserva en concreto dado su ID",
                "description": "Devuelve los detalles de una reserva, incluyendo relación con la habitación y el hotel",
                "operationId": "a226b43b2a6a846245e658d01bf00720",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID de la reserva",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Reserva encontrada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer"
                                        },
                                        "room_id": {
                                            "type": "integer"
                                        },
                                        "guest_name": {
                                            "type": "string"
                                        },
                                        "guest_email": {
                                            "type": "string",
                                            "nullable": true
                                        },
                                        "guest_count": {
                                            "type": "integer",
                                            "nullable": true
                                        },
                                        "check_in": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "check_out": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "room": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer"
                                                },
                                                "hotel": {
                                                    "properties": {
                                                        "id": {
                                                            "type": "integer"
                                                        },
                                                        "name": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Reserva no encontrada"
                    }
                }
            }
        },
        "/api/reservations": {
            "get": {
                "tags": [
                    "Reservas"
                ],
                "summary": "Listar todas las reservas",
                "description": "Devuelve un listado de reservas. Se pueden aplicar filtros: from, to, hotel_id, room_id",
                "operationId": "fbc6050d9f7fdb07075d3aaeb157ffa9",
                "parameters": [
                    {
                        "name": "from",
                        "in": "query",
                        "description": "Fecha desde (exclusive) formato YYYY-MM-DD",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    {
                        "name": "to",
                        "in": "query",
                        "description": "Fecha hasta (exclusive) formato YYYY-MM-DD",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    {
                        "name": "hotel_id",
                        "in": "query",
                        "description": "Filtrar por ID de hotel",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "room_id",
                        "in": "query",
                        "description": "Filtrar por ID de habitación",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Listado de reservas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer"
                                            },
                                            "room_id": {
                                                "type": "integer"
                                            },
                                            "guest_name": {
                                                "type": "string"
                                            },
                                            "guest_email": {
                                                "type": "string",
                                                "nullable": true
                                            },
                                            "guest_count": {
                                                "type": "integer",
                                                "nullable": true
                                            },
                                            "check_in": {
                                                "type": "string",
                                                "format": "date-time"
                                            },
                                            "check_out": {
                                                "type": "string",
                                                "format": "date-time"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Reservas"
                ],
                "summary": "Crear una nueva reserva",
                "description": "Crea una nueva reserva si no hay solapamiento con reservas existentes",
                "operationId": "01e3d21dc330a31de025203bc142ffa3",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "room_id",
                                    "guest_name",
                                    "check_in",
                                    "check_out"
                                ],
                                "properties": {
                                    "room_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "guest_name": {
                                        "type": "string",
                                        "example": "Juan Pérez"
                                    },
                                    "guest_email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "marianela@mail.com"
                                    },
                                    "guest_count": {
                                        "type": "integer",
                                        "example": 2
                                    },
                                    "check_in": {
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2025-12-01T14:00:00Z"
                                    },
                                    "check_out": {
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2025-12-05T11:00:00Z"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Reserva creada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer"
                                        },
                                        "room_id": {
                                            "type": "integer"
                                        },
                                        "guest_name": {
                                            "type": "string"
                                        },
                                        "guest_email": {
                                            "type": "string",
                                            "nullable": true
                                        },
                                        "guest_count": {
                                            "type": "integer",
                                            "nullable": true
                                        },
                                        "check_in": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "check_out": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Conflicto por solapamiento de reservas"
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                }
            }
        },
        "/api/hotels/{hotelId}/rooms": {
            "get": {
                "tags": [
                    "Habitaciones"
                ],
                "summary": "Listar las habitaciones de un determinado hotel",
                "description": "Devuelve el listado de habitaciones pertenecientes al hotel indicado",
                "operationId": "442cf7acae7456f95967c56db11459c4",
                "parameters": [
                    {
                        "name": "hotelId",
                        "in": "path",
                        "description": "ID del hotel",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Listado de habitaciones",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "name": {
                                                "type": "string",
                                                "example": "Habitación Matrimonial"
                                            },
                                            "capacity": {
                                                "type": "integer",
                                                "example": 2,
                                                "nullable": true
                                            },
                                            "room_type": {
                                                "type": "string",
                                                "example": "standard",
                                                "nullable": true
                                            },
                                            "price": {
                                                "type": "number",
