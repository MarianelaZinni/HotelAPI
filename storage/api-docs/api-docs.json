    "paths": {
        "/api/hotels": {
            "get": {
                "tags": [
                    "Hoteles"
                ],
                "summary": "Listar todos los hoteles",
                "description": "Devuelve el listado completo de los hoteles",
                "operationId": "1f059609a9a7cdebad01e8494549cc8d",
                "responses": {
                    "200": {
                        "description": "Lista de hoteles",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "name": {
                                                "type": "string",
                                                "example": "Hotel Central"
                                            },
                                            "city": {
                                                "type": "string",
                                                "example": "Buenos Aires"
                                            },
                                            "address": {
                                                "type": "string",
                                                "example": "Calle Falsa 123"
                                            },
                                            "phone": {
                                                "type": "string",
                                                "example": "+54 11 1234 5678"
                                            },
                                            "email": {
                                                "type": "string",
                                                "format": "email",
                                                "example": "contacto@hotel.com"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Hoteles"
                ],
                "summary": "Crear un nuevo hotel",
                "description": "Crea un nuevo hotel con los datos dados",
                "operationId": "c8f412836761802038a38f7c95ad6c9e",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Hotel Central"
                                    },
                                    "city": {
                                        "type": "string",
                                        "example": "Buenos Aires"
                                    },
                                    "address": {
                                        "type": "string",
                                        "example": "Calle Falsa 123"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "example": "+54 11 1234 5678"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "contacto@hotel.com"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Hotel creado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "Hotel Central"
                                        },
                                        "city": {
                                            "type": "string",
                                            "example": "Buenos Aires"
                                        },
                                        "address": {
                                            "type": "string",
                                            "example": "Calle Falsa 123"
                                        },
                                        "phone": {
                                            "type": "string",
                                            "example": "+54 11 1234 5678"
                                        },
                                        "email": {
                                            "type": "string",
                                            "format": "email",
                                            "example": "contacto@hotel.com"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
