                                        "room_type": {
                                            "type": "string",
                                            "example": "suite",
                                            "nullable": true
                                        },
                                        "price": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 150,
                                            "nullable": true
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    },
                                    "type": "object"
                                }
