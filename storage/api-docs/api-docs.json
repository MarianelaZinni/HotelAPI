                                    "capacity": {
                                        "type": "integer",
                                        "example": 2,
                                        "nullable": true
                                    },
                                    "room_type": {
                                        "type": "string",
                                        "example": "suite",
                                        "nullable": true
                                    },
                                    "price": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 150,
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Habitación creada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
